<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <gradient
                android:endColor="@color/accent_material_dark"
                android:startColor="@color/accent_material_dark"
                android:angle="270" />
            <corners android:bottomRightRadius="4dp" android:bottomLeftRadius="4dp"
                android:topLeftRadius="4dp" android:topRightRadius="4dp"/>
            <padding
                android:left="5dp"
                android:top="10dp"
                android:right="5dp"
                android:bottom="10dp" />
        </shape>
    </item>



    <item>
        <shape>
            <gradient
                android:endColor="@color/myColorAccent"
                android:startColor="@color/myColorAccent"
                android:angle="270" />
            <corners
                android:radius="5dp" />

        </shape>
    </item>
</selector>